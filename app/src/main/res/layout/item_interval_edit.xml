<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="position"
            type="int" />

        <variable
            name="text"
            type="java.lang.String" />

        <variable
            name="unitOrdinal"
            type="int" />

        <variable
            name="viewModel"
            type="me.ssttkkl.mrmemorizer.ui.settings.editinterval.EditIntervalViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="@={text}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="5" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            selectedPosition="@={unitOrdinal}"
            android:entries="@array/review_interval_at" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/ui_margin_medium"
            android:onClick="@{() -> viewModel.onClickDoneItem(position,text,unitOrdinal)}"
            android:src="@drawable/ic_done_black_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/ui_margin_medium"
            android:onClick="@{() -> viewModel.onClickRemoveItem(position)}"
            android:src="@drawable/ic_delete_black_24dp" />
    </LinearLayout>
</layout>