<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_category_daily_notice">

        <SwitchPreference
            android:title="@string/settings_title_daily_notice_enabled"
            app:defaultValue="true"
            app:key="daily_notice_enabled" />

        <Preference
            android:title="@string/settings_title_daily_notice_time"
            app:dependency="daily_notice_enabled"
            app:key="daily_notice_time" />

    </PreferenceCategory>

</PreferenceScreen>